{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "ignorePatterns": ["package.json"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    //"quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": ["off"]
  }
}
